{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016",
      "ES2017.object",
      "ES2017.String",
      "ES2017.Intl",
      "ES2017.TypedArrays",
      "ES2018.AsyncGenerator",
      "ES2018.AsyncIterable",
      "ES2018.Promise",
      "ES2018.Intl",
      "ES2019.Array",
      "ES2019.Object",
      "ES2019.String",
      "ES2019.Symbol"
    ],
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src/*"]
}
